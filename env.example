# Oracle Cloud Instance Manager - Configuration
# Copy this file to .env and fill in your values

# ========== OCI API Credentials ==========
OCI_REGION=eu-frankfurt-1
OCI_TENANCY_ID=ocid1.tenancy.oc1..xxxxxxxx
OCI_USER_ID=ocid1.user.oc1..xxxxxxxx
OCI_KEY_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
OCI_PRIVATE_KEY_FILENAME=/app/keys/private-key.pem

# ========== Network Settings ==========
OCI_SUBNET_ID=ocid1.subnet.oc1..xxxxxxxx
OCI_AVAILABILITY_DOMAIN=

# ========== Instance Configuration ==========
# VM.Standard.A1.Flex (ARM - 4 OCPU / 24 GB Free)
# VM.Standard.E2.1.Micro (AMD - 1 OCPU / 1 GB Free)
OCI_SHAPE=VM.Standard.A1.Flex
OCI_OCPUS=4
OCI_MEMORY_IN_GBS=24
OCI_IMAGE_ID=ocid1.image.oc1..xxxxxxxx
OCI_SSH_PUBLIC_KEY="ssh-rsa AAAA..."
OCI_DISPLAY_NAME=my-instance

# ========== Bot Settings ==========
OCI_RETRY_INTERVAL=1
OCI_MIN_RETRY_INTERVAL=1

# ========== Telegram Notifications ==========
TELEGRAM_BOT_API_KEY=
TELEGRAM_USER_ID=

# ========== Web Admin Panel ==========
WEB_USERNAME=admin
WEB_PASSWORD=admin123
WEB_HOST=0.0.0.0
WEB_PORT=5000
SECRET_KEY=change-this-to-a-random-string
DEBUG=false
